@page "/component"
<h3>Component</h3>

<br />
<button class="btn btn-danger" @onclick="ChanegeBtnText">
    Zmień tekst przycisku
</button>

<br />
<button class="btn btn-secondary my-2" @onclick="AddCardBorder">
    Dodaj obramowanie
</button>
<CascadingValue Value="@_title" Name="Title">
     <CascadingValue Value="@_info" Name="Info">
        <Card  @ref="_card"
            Image="/files/kowalski.png"
            BtnText="@_btnText"
            OnClickMore="ClickMore"
            BtnAttributes="_cardBtnAttribiutes">
            <Title>
                <B>Jan Kowalski</B>
            </Title>
            <Content>
                <p>
                    <u>Programista C#/.NET </u> z 20 letnim doświadczeniem.<br />
                    <u> Specjalizacje:</u>
                    <ul>
                        <li>Blazor</li>
                        <li>ASP .NET Core</li>
                    </ul>
                </p>
            </Content>
        </Card> 
    </CascadingValue>
</CascadingValue>

<div class="d-flex gap-2">
    @foreach(var item in _authors)
    {
        <Card
            Image="@item.Image"
            BtnText="@item.BtnText"
         >
        <Title>
            @item.Title
        </Title>
        <Content>
            @item.Content
        </Content>
        
    </Card>
    }
</div>